---
interface Props {
  name: string;
  slug: string;
  tagLine: string;
  start: string;
  end: string;
  role: string;
  client: string;
  showLink?: boolean;
  company: {
    name: string;
    logo: string;
  }
}

const {name, tagLine, start, end, company, role, client, slug, showLink = true} = Astro.props;
---
<div class="flex justify-between items-start gap-4 p-3">
  <div class="flex flex-col justify-start items-start gap-0.5">
    <span class="flex justify-center items-center gap-2">
      <p class="text-3xl font-bold">{name}</p>
      {showLink && <a href=`${slug.split('/')[1]}`>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
             stroke="currentColor" class="size-6">
          <path stroke-linecap="round" stroke-linejoin="round"
                d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244"/>
        </svg>
  
      </a>}
    </span>
    <span>{role} - {client}</span>
    <span class="text-lg text-gray-500">{tagLine}</span>
    <span class="text-sm font-light">{start} - {end}</span>
  </div>
  <span class="flex  justify-center items-center self-center mr-16">
      <img src={company.logo} alt=`${name}-logo` class="w-24"/>
  </span>
</div>
